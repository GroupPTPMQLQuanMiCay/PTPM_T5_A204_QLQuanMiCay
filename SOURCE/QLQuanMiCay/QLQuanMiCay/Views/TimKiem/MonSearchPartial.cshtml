@model IPagedList<BLL_DAL.Mon>
@using PagedList
@using PagedList.Mvc

@{
    if (Model.Count == 0)
    {
        <div>Không có kết quả phù hợp</div>
    }
    else
    {
        <div id="partialMon">
            <ul class="list-group list-group-flush text-left">
                @{
                    foreach (var mon in Model)
                    {
                        <li class="list-group-item">
                            @mon.M_Ten
                        </li>
                    }
                }
            </ul>
        </div>

        @Html.PagedListPager(Model, i => Url.Action("Index", "TimKiem", new { index = i, text = @ViewBag.Text, searchBy = "mon" }))
    }
}
