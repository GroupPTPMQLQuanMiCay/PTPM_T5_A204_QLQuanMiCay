
@model IPagedList<BLL_DAL.TinTuc>
@using PagedList
@using PagedList.Mvc

@{
    if (Model.Count == 0)
    {
        <h3>Không có kết quả phù hợp</h3>
    }
    else
    {
        <div id="partialTin">
            <ul class="list-group list-group-flush text-left">
                @{
                    foreach (var tin in Model)
                    {
                        <li class="list-group-item">
                            @tin.TieuDe
                        </li>
                    }
                }
            </ul>
        </div>

        @Html.PagedListPager(Model, i => Url.Action("Index", "TimKiem", new { index = i, text = @ViewBag.Text, searchBy = "tin" }))
    }
}
